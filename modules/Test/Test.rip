global c_total = 0, c_false = 0, verbose = true

module Test
  set_verbose(v)
    verbose = v

  get_results()
    return [c_total, c_false]

  test(name, a, b)
    c_total = c_total + 1
    if a == b
      if verbose
        Err.printf("%a OK\n", name)
    else
      c_false = c_false + 1
      Err.printf("%a FAIL\n", name)

  error()
    $
      exc_raise("Test.error()");
    $

  display_stack()
    $
      stack_display();
    $
